def solve():
    s = input()
    tmp = s
    for i in range(len(s)):
        s = tmp[:i] + tmp[i+1:]
        try:
            n = int(s)
            if n % 8 == 0:
                print("YES")
                print(s)
                return
        except ValueError:
            pass
        s = tmp
    print("NO")

t = 1
while t > 0:
    solve()
    t -= 1
